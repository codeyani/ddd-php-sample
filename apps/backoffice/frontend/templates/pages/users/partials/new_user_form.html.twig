<form class="w-full max-lg" method="post" action="{{ path('users_post') }}">
    <h2 class="block uppercase tracking-wide text-gray-700 text-3xl font-bold mb-2">Create User</h2>
    <div class="flex flex-wrap mb-6 -mx-3">
        <div class="w-full md:w-full px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                ID
            </label>
            <input class="{% if flash.has('errors.id') %}border border-red-500{% endif %} appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   id="grid-first-name" type="text" name="id" placeholder="En formado UUID"
                   value="{{ flash.get('inputs.id', new_user_id) }}">

            {% if flash.has('errors.id') %}
                <p class="text-red-500 text-xs italic">{{ flash.get('errors.id') }}</p>
            {% endif %}
        </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/1 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                Email
            </label>
            <input class="{% if flash.has('errors.email') %}border border-red-500{% endif %} appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   id="grid-first-email" type="text" name="email" placeholder="DDD en PHP"
                   value="{{ flash.get('inputs.email') }}">

            {% if flash.has('errors.email') %}
                <p class="text-red-500 text-xs italic">{{ flash.get('errors.email') }}</p>
            {% endif %}
        </div>
        <div class="w-full md:w-1/2 px-3 mt-4">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                First Name
            </label>
            <input class="{% if flash.has('errors.firstName') %}border border-red-500{% endif %} appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   id="grid-last-name" type="text" name="firstName" placeholder="8 days"
                   value="{{ flash.get('inputs.firstName') }}">
            {% if flash.has('errors.firstName') %}
                <p class="text-red-500 text-xs italic">{{ flash.get('errors.firstName') }}</p>
            {% endif %}
        </div>
        <div class="w-full md:w-1/2 px-3 mt-4">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                last Name
            </label>
            <input class="{% if flash.has('errors.lastName') %}border border-red-500{% endif %} appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   id="grid-last-name" type="text" name="lastName" placeholder="8 days"
                   value="{{ flash.get('inputs.lastName') }}">
            {% if flash.has('errors.lastName') %}
                <p class="text-red-500 text-xs italic">{{ flash.get('errors.lastName') }}</p>
            {% endif %}
        </div>
    </div>
    <div class="flex flex-wrap mb-6">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                type="submit">
            Submit
        </button>
    </div>
</form>
